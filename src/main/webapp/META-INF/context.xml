<?xml version="1.0" encoding="UTF-8"?>
<Context path="/">
    <Resource
            name="db.sqlite"
            auth="container"
            type="javax.sql.DataSource"
            driverClassName="org.sqlite.JDBC"
            url="jdbc:sqlite:D:/projects/tasksexample-developer\db.sqlite"
            closeMethod="close"
    />

    <Resource
            name="bean/file-service"
            type="ru.itpark.implementation.service.FileServiceImpl"
            factory="org.apache.naming.factory.BeanFactory"
    />


</Context>
